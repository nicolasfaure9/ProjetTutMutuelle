<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:local="clr-namespace:testbackoffice7"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map" x:Class="testbackoffice7.MainWindow"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        Icon="tutmutlogo.ico"
        dx:ThemeManager.ThemeName="Office2013"
        Loaded="Window_Loaded"
        WindowState="Maximized"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                    
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <dragablz:TabablzControl  x:Name="maintab" SelectionChanged="maintab_SelectionChanged" >
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController/>
            </dragablz:TabablzControl.InterTabController>
            <TabItem Header="ACCUEIL" Margin="5,0,5,0" x:Name="home">
                <Grid>
                <Image Source="tutmutlogo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" Width="200" Height="200"/>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100">
                        
                        <Label Content="Bonjour" FontFamily="LATO" FontSize="40" FontWeight="Light" Margin="10"/>
                        <Label Content ="Bienvenue dans le super Backoffice du site TutMut&#10;Veuillez vous identifier " FontFamily="LATO" FontSize="30" FontWeight="Light" Margin="10"/>
                        <TextBox Width="150" x:Name="login" Margin="10"/>
                        <PasswordBox Width="150" x:Name="mdp" Margin="20"/>
                        <Button Content="Commencer le suivi " Height="50" Width="200"  Click="Button_Click" Margin="10"/>
                    </StackPanel>
                    
                </Grid>
            </TabItem>
            <TabItem Header="INDICATEURS" x:Name="indictab" Margin="5,0,5,0" Visibility="Collapsed">
                <dragablz:TabablzControl  x:Name="charttab" SelectionChanged="maintab_SelectionChanged" >
                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController/>
                    </dragablz:TabablzControl.InterTabController>
                    <TabItem Header="INDICATEURS">
                        <local:Charts HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </TabItem>
                    <TabItem Header="CHIFFRES">
                        <Grid>
                            
                        </Grid>
                    </TabItem>
                </dragablz:TabablzControl>
            </TabItem>
            <TabItem Header="BASE" Margin="5,0,5,0" >
                <dragablz:TabablzControl>
                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController/>
                    </dragablz:TabablzControl.InterTabController>
                    <TabItem Header="ADHESIONS">
