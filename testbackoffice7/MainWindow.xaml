                                    </Canvas>
                                </Viewbox>
                               
                            </Button>
                        </Grid>
                         
                        
                    </TabItem>
                    <TabItem Header="BENEFICIAIRES">
                        <DataGrid Margin="10" x:Name="benegrid" AutoGenerateColumns="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" />
                    </TabItem>
                    <TabItem Header="REGIONS">
                        <DataGrid Margin="10" x:Name="regiongrid" AutoGenerateColumns="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" />
                    </TabItem>
                    <TabItem Header="DEPARTEMENTS">
                        <DataGrid Margin="10" x:Name="depgrid" AutoGenerateColumns="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" />
                    </TabItem>
                    <TabItem Header="VILLES">
                        <DataGrid Margin="10" x:Name="villegrid" AutoGenerateColumns="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" />
                    </TabItem>
                </dragablz:TabablzControl>
               

            </TabItem>
            <TabItem Header="GEOGRAPHIE" Margin="10" >
                <Grid>
                    
                    <dxm:MapControl Grid.Row="1" x:Name="mapctrl" HorizontalAlignment="Stretch" ZoomLevel="6"   VerticalAlignment="Stretch">

                        <dxm:ImageTilesLayer>
                            <dxm:BingMapDataProvider BingKey="Ag49VHLhaXRtH2qMVteFcCAYXyFUjj1d-sDDhO4oVffuwA2KISWHXCw1TCjx4suA" />
                        </dxm:ImageTilesLayer>
                        <dxm:VectorLayer x:Name="vectorlayer" ViewportChanged="vectorlayer_ViewportChanged" >

                        </dxm:VectorLayer>
                        <dxm:VectorLayer x:Name="vectorlayerLocal" ViewportChanged="vectorlayer_ViewportChanged" >

                        </dxm:VectorLayer>
                        <dxm:VectorLayer x:Name="vectorlayerRegion" ViewportChanged="vectorlayer_ViewportChanged" >

                        </dxm:VectorLayer>
                        <dxm:VectorLayer x:Name="vectorlayerDepartement" ViewportChanged="vectorlayer_ViewportChanged" >

                        </dxm:VectorLayer>
                    </dxm:MapControl>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
                        
                        <Button Content="Regions" Click="Button_Click_3" Margin="2"/>
                        <Button Content="Departements" Click="Button_Click_4" Margin="2"/>
                        <Button Content="Commune" Click="Button_Click_5" Margin="2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Background="White" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <StackPanel.Effect>
                            <DropShadowEffect Opacity="0.3" Direction="270" ShadowDepth="5" BlurRadius="5"/>
                        </StackPanel.Effect>
                        <Label Content="Rechercher" Width="120" Margin="2" Foreground="#FF303030" FontFamily="Lato" FontSize="20" FontWeight="Light" />
                        <TextBox x:Name="rechtext" Width="150" Margin="2" />
                        <Button Content="rechercher" Click="Button_Click_6" Margin="2" />
                    </StackPanel>
                </Grid>
                
            </TabItem>

            <TabItem Header="GRAPHIQUES" Margin="10,0,10,0" >
                <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <dxc:ChartControl HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10"  >
                        <dxc:XYDiagram2D x:Name="diagrammeregion">
                            <dxc:BarSideBySideSeries2D x:Name="histo" DisplayName="regions"/>
                        </dxc:XYDiagram2D>
                    </dxc:ChartControl>
                    <dxc:ChartControl HorizontalAlignment="Center" VerticalAlignment="Stretch"  Margin="10" >
                        <dxc:XYDiagram2D x:Name="diagrammeregion2">
                            <dxc:BarSideBySideSeries2D x:Name="histo2" DisplayName="regions"/>
                        </dxc:XYDiagram2D>
                    </dxc:ChartControl>
                    <dxc:ChartControl HorizontalAlignment="Center" VerticalAlignment="Stretch"  Margin="10" >
                        <dxc:XYDiagram2D x:Name="diagrammeregion3">
                            <dxc:BarSideBySideSeries2D x:Name="histo3" DisplayName="regions"/>
                        </dxc:XYDiagram2D>
                    </dxc:ChartControl>
                    <dxc:ChartControl HorizontalAlignment="Center" VerticalAlignment="Stretch"  Margin="10" >
                        <dxc:XYDiagram2D x:Name="diagrammeregion4">
                            <dxc:BarSideBySideSeries2D x:Name="histo4" DisplayName="regions" />
                        </dxc:XYDiagram2D>
                    </dxc:ChartControl>
                </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="ANALITICS" Margin="5,0,5,0" >
                <dragablz:TabablzControl>
                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController/>
                    </dragablz:TabablzControl.InterTabController>
                    <TabItem Header="HOTJAR">
                        <cefSharp:ChromiumWebBrowser x:Name="hotjar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Address="https://insights.hotjar.com/login"/>
                    </TabItem>
                    <TabItem Header="GOOGLE ANALITICS">
                        <cefSharp:ChromiumWebBrowser x:Name="google" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Address="https://www.google.fr/intl/fr/analytics/"/>
                    </TabItem>
                </dragablz:TabablzControl>
                
            </TabItem>
            
        </dragablz:TabablzControl>
        <Button  Style="{StaticResource MaterialDesignFloatingActionButton}"
                         HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Button_Click_1"
                        ToolTip="MaterialDesignFloatingActionButton">
