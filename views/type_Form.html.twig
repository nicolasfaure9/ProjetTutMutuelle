{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="well">
        {{ form_start(typeForm, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{ form_label(typeForm.id, NULL, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(typeForm.id) }}
                {{ form_widget(typeForm.id, { 'attr':  {
                'class': 'form-control',
                'rows': '4'                
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(typeForm.label, NULL, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(typeForm.label) }}
                {{ form_widget(typeForm.label, { 'attr':  {
                'class': 'form-control',
                'rows': '4'                
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
        {{ form_end(typeForm) }}
    </div>
{% endblock %}
