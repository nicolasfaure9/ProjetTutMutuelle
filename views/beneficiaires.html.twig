{% extends "layout.html.twig" %}
{% set Mutuelle = true %}

{% block title %}Mes bénéficiaires{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if adhesion %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Date de Naissance</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for beneficiaire in adhesion.beneficiaires %}
                <tr>
                     <td><a href="/remboursements/{{ beneficiaire.num }}">{{ beneficiaire.num }}</a></td>
                    
                    <td>{{ beneficiaire.datenaissance }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Erreur chargement de vos bénéficiaires.</div>
{% endif %}   
{% endblock %}{# empty Twig template #}
