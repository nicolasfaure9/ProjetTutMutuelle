<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Mutuelle - {% block title %}{% endblock %}</title>

        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/roboto.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/material-fullpalette.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/ripples.min.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
    </head>
    <body class="well-material-light-blue-500">

        

        <div class="container">

            

            <!-- Navbar
================================================== -->
            <div class="bs-docs-section clearfix">
                <div class="row">
                    <div class="col-lg-12">
                        

                        <div class="bs-component">
                            <div class="navbar navbar-material-light-blue-500">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                   <img class="navbar-brand" src="{{ app.request.basepath }}/images/tutmutlogo.png"/>
                                </div>
                                <div class="navbar-collapse collapse navbar-responsive-collapse">
                                    <ul class="nav navbar-nav">
                                        <li > <a  href="/accueil"> Accueil</a></li>
                                        
                                        
                                    </ul>
                                    
                                    <ul class="nav navbar-nav navbar-right">
                                       {% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-user"></span> Bonjour  {{ app.security.token.user.prenom }} <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('logout') }}">Se deconnecter</a></li>
                                        <li><a href="/me">Changer mot de passe</a></li>
                                       
                                    </ul>
                                </li>

                            {% else %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-user"></span> Non connecté <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('login') }}">Se Connecter</a></li>
                                       
                                    </ul>
                                </li>


                            {% endif %} 
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


               <script src="./lib/jquery/jquery-2.1.3.min.js"></script>
        <script src="./lib/bootstrap/js/bootstrap.min.js"></script>
         <script src="{{ app.request.basepath }}/lib/bootstrap/js/ripples.min.js"></script>
        <script src="{{ app.request.basepath }}/lib/bootstrap/js/material.min.js"></script>
                <script>
            $(function() {
                $.material.init();
         });
        </script>
                    {% autoescape %}
                <div id="content">{% block content %}{% endblock %}</div>
            {% endautoescape %}
       <footer class="footer">
      <div class="container">
        <p>TutMut™</p>
      </div>
    </footer>       
 </div>

    </body>

    <style> 
    footer {
  position: fixed;
  bottom: 0;
  height: 30px;
  color: white;
  background-color: #03A9F4;
}
footer .container {
  margin: 10px 0;
}
</style>
</html>