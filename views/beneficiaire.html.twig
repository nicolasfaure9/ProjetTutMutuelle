{% extends 'layout.html.twig' %}


{% block title %}Changer votre mot de passe{% endblock %}
{% block content %}
    
        
        <h2 class="text-center">{{ block('title') }}</h2>
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% if form_errors(beneficiaireForm.password.first) %}
            <div class="alert alert-danger">
                {{ form_errors(beneficiaireForm.password.first) }}
            </div>
        {% endif %}

        <div class="well">
            {{ form_start(beneficiaireForm, { 'attr': {'class': 'form-horizontal'} }) }}
            
           
            <div class="form-group ">
                {{ form_label(beneficiaireForm.password.first, NULL, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4  form-group-material-light-blue-500">
                    {{ form_widget(beneficiaireForm.password.first, { 'attr':  {
                'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group ">
                {{ form_label(beneficiaireForm.password.second, NULL, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
                }}) }}
                <div class="col-sm-4 form-group-material-light-blue-500 ">
                    {{ form_widget(beneficiaireForm.password.second, { 'attr':  {
                'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group form-group-material-light-blue-500  ">
                <div class="col-sm-offset-5 col-sm-3">
                    <input type="submit"  class="btn btn-primary btn-material-light-blue-500" value="Enregistrer" />
                </div>
            </div>
            {{ form_end(beneficiaireForm) }}
        </div>
    
{% endblock %}
